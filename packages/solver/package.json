{
  "name": "@truffle/solver",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "yarn build:dist && yarn copy-files",
    "clean": "rimraf ./dist",
    "prepare": "yarn build",
    "build:dist": "ttsc",
    "madge": "madge ./src/index.ts",
    "test": "jest --verbose --detectOpenHandles --forceExit --passWithNoTests",
    "copy-files": "copyfiles -u 1 src/test/mockDeclarations/*.yaml src/test/mockDeclarations/*.json ./dist/src/",
    "start": "ttsc --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "ramda": "^0.28.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/jest": "^26.0.22",
    "fse": "^4.0.1",
    "js-yaml": "^4.1.0",
    "path": "^0.12.7",
    "toposort": "^2.0.2",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleNameMapper": {
      "^@truffle/solver/(.*)": "<rootDir>/src/$1",
      "^@truffle/solver$": "<rootDir>/src",
      "^test/(.*)": "<rootDir>/test/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/test/index.(ts|js)",
      "<rootDir>/test/**/test/index.(ts|js)",
      "<rootDir>/src/**/test/*\\.(spec|test)\\.(ts|js)",
      "<rootDir>/test/**/test/*\\.(spec|test)\\.(ts|js)"
    ]
  }
}
